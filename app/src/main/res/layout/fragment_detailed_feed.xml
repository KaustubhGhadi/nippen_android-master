<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white_background">

    <RelativeLayout
        android:id="@+id/top_head_rl"
        android:layout_width="match_parent"
        android:background="@color/white_background"
        android:layout_height="60dp">


        <LinearLayout
            android:id="@+id/meter_select_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:padding="15dp"
            android:gravity="center"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/meter_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:text="Mailbox 1" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/date_select_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@id/top_head_rl">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Device History :- "
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/select_from_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- Select From Date --"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:minWidth="230dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To:"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/select_to_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- Select To Date -- "
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:minWidth="230dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feed Type:"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/select_feed_type_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- Select Feed Type -- "
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:minWidth="230dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basis:"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <Button
                android:id="@+id/basis_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- Select Basis -- "
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:minWidth="230dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date_show_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_below="@id/top_head_rl">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device History For :- "
                android:textColor="@color/colorPrimary"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" />


            <TextView
                android:id="@+id/edit_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feed Type:" />

            <TextView
                android:id="@+id/feed_type_tv"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25-12-2018 22:44" />

            <TextView
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="Basis:" />

            <TextView
                android:id="@+id/basis_tv"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="25-12-2018 22:44"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From:" />

            <TextView
                android:id="@+id/from_date_tv"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25-12-2018 22:44" />

            <TextView
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="To:" />

            <TextView
                android:id="@+id/to_date_tv"
                android:layout_width="wrap_content"
                android:textSize="12sp"
                android:text="25-12-2018 22:44"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_below="@id/date_show_ll"
        android:id="@+id/chart_container_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="lecho.lib.hellocharts.samples.ColumnChartActivity"
        tools:ignore="MergeRootFrame" />

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

</RelativeLayout>